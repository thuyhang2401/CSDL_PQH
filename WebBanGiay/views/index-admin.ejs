  <script>
    function updateContent() {
      const dropdown = document.getElementById('contentDropdown');
      const contentDisplay = document.getElementById('contentDisplay');

      switch (dropdown.value) {
        case 'content1':
          contentDisplay.innerHTML = '<h2>Nội dung 1</h2><p>Đây là nội dung số 1.</p>';
          break;
        case 'content2':
          contentDisplay.innerHTML = '<h2>Nội dung 2</h2><p>Đây là nội dung số 2.</p>';
          break;
        case 'content3':
          contentDisplay.innerHTML = '<h2>Nội dung 3</h2><p>Đây là nội dung số 3.</p>';
          break;
        default:
          contentDisplay.innerHTML = '<h2>Chọn một mục từ dropdown</h2>';
      }
    }

    // Get the modal
    var modal = document.getElementById('id01');

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
  </script>

  <script>
    function openModal(productId) {
      fetch(`/admins/products/${productId}`)
        .then(response => response.json())
        .then(data => {
          if (data.product) {
            // edit modal
            document.getElementById('pidEditModal').value = data.product._id;
            document.getElementById('nameEditModal').value = data.product.productName;
            document.getElementById('priceEditModal').value = data.product.price;
            document.getElementById('colorEditModal').value = data.product.color;
            document.getElementById('descriptionEditModal').value = data.product.description;
            document.getElementById('instructionEditModal').value = data.product.storageInstruction;
            document.getElementById('tipsEditModal').value = data.product.tips;
            document.getElementById('imageEditModal').value = data.product.image;

            let categoryEditSelect = document.getElementById('contentEditDropdown');
            categoryEditSelect.innerHTML = '';

            data.category.forEach(category => {
              let option = document.createElement('option');
              option.value = category._id;
              option.textContent = category.categoryName;
              categoryEditSelect.appendChild(option);
            });
            categoryEditSelect.value = data.product.categoryId._id;

            for (let size = 35; size <= 45; size++) {
              document.getElementById(`amount${size}EditModal`).value = data.sizeQtt[0].sizes[`size${size}`];
            }

            // delete modal
            document.getElementById('pidDeleteModal').value = data.product._id;
            document.getElementById('nameDeleteModal').value = data.product.productName;
            document.getElementById('priceDeleteModal').value = data.product.price;
            document.getElementById('colorDeleteModal').value = data.product.color;
            document.getElementById('descriptionDeleteModal').value = data.product.description;
            document.getElementById('instructionDeleteModal').value = data.product.storageInstruction;
            document.getElementById('tipsDeleteModal').value = data.product.tips;
            document.getElementById('imageDeleteModal').value = data.product.image;

            let categoryDeleteSelect = document.getElementById('contentDeleteDropdown');
            categoryDeleteSelect.innerHTML = '';
            data.category.forEach(category => {
              let option = document.createElement('option');
              option.value = category._id;
              option.textContent = category.categoryName;
              categoryDeleteSelect.appendChild(option);
            });
            categoryDeleteSelect.value = data.product.categoryId._id;

            for (let size = 35; size <= 45; size++) {
              document.getElementById(`amount${size}DeleteModal`).value = data.sizeQtt[0].sizes[`size${size}`];
            }
